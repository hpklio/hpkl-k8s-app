import "../renderer.pkl"

class Config {
    connectionString: String
    
    username: String
    
    @renderer.SecretField
    password: String

    env: EnvConfig?
}

class EnvConfig {
    io: IoConfig?
    ssl: SslConfig?
    timeouts: TimeoutsConfig?
}

class IoConfig {
    minEndpoints: UInt16?
    maxEndpoints: UInt16?
    idleHttpConnectionTimeout: Duration?    
}

class SslConfig {
    enabled: Boolean?
    bundle: String?
}

class TimeoutsConfig {
    connect: Duration?
    disconnect: Duration?
    keyValue: Duration?
    keyValueDurable: Duration?
    query: Duration?
    view: Duration?
    search: Duration?
    analytics: Duration?
    management: Duration?
}

class DataConfig {
    autoIndex: Boolean?
    bucketName: String
}